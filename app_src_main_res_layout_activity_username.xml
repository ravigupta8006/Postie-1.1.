<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6e8e5"
    tools:context=".UsernameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Photo"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"
        android:textColor="@android:color/widget_edittext_dark"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="135dp"
        app:civ_border_color="#FF000000"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap on photo to add or update Profile Photo"
        android:textSize="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"
        android:textColor="@android:color/widget_edittext_dark"/>


    <Button
        android:id="@+id/remove_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:background="#FF7E7E"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="210dp"
        />
    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="33.7dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_round"
        android:hint="Username "
        />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="109dp"
        android:layout_height="20dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="400dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="true"
        android:visibility="invisible"

        />

    <Button
        android:id="@+id/create_account_btn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="3.9dp"
        android:layout_centerHorizontal="true"
        android:text="CREATE ACCOUNT"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/button_round"
        />


    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip>"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="105.7dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/widget_edittext_dark"
        />

</RelativeLayout>