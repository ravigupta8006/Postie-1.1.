<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6e8e5"
    tools:context=".OTPFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_message_black_24dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verfication code has sent to +9504464729"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="63dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/widget_edittext_dark"/>
    <EditText
        android:id="@+id/otp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="33.7dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/edit_round"
        android:textSize="20sp"
        android:inputType="number"
        android:hint=" Enter OTP"
        android:textColorHint="@android:color/widget_edittext_dark"/>
    <Button
        android:id="@+id/resend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="99.9dp"
        android:text="RESEND"
        android:textColor="@android:color/white"
        android:background="@drawable/button_round"
        />
    <Button
        android:id="@+id/verify_btn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="3.9dp"
        android:layout_centerHorizontal="true"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/button_round"
        />

</FrameLayout>